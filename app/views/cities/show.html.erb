<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<div id="city-map"></div>
<div class="container">
  <div class="text-right">
    <%= link_to " Create New Activity", city_event_new_path(@city), :class => "fa fa-plus", 'data-no-turbolink' => true %>
  </div>
  <div class="row">
    <div class="col-lg-3 col-sm-4">
      <div class="card hovercard">
      <% @city.events.each do |event| %>
      <div class="cardBox">
        <button type="text" class="btn btn-info btn-xs pull-left" >Date: <%= event.date.strftime("%b %d,")%></button>
        <button class="btn btn-info btn-xs pull-right">Participants: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%></button>
          <div class="cardheader" style="background: url('http://www.justprop.com/components/com_djclassifieds/images/id_images/68.jpg');background-size: cover;height: 135px;">
          </div>
          <div class="avatar">
            <img class="img-circle" alt="" src="http://www.justprop.com/components/com_djclassifieds/images/id_images/5.jpg">
          </div>
          <div class="info">
            <div class="title"><%= link_to event.name, event_path(event), 'data-no-turbolink' => true%></div>
            </div>
            <div class="desc"><%= event.address%></div><hr>
          <%if (event.users.count + event.current_headcount) == event.max_headcount%>
            <h4> FULL </h4>
          <%else %>
            <h4> OPEN </h4>
          <%end%>
            <br>
          <% if (current_user.id != event.user_id) && (event.users.count + event.current_headcount) < event.max_headcount && !event.users.all.exists?(current_user.id)%>
          <%= button_to "Join", attendings_path(event), class:"btn btn-primary", 'data-no-turbolink' => true %>
          <% end %>
          <% if (current_user.id != event.user_id) && event.users.all.exists?(current_user.id)%>
          <%= button_to "Leave Event", remove_attending_path(event), method: :patch, class:"btn btn-warning", 'data-no-turbolink' => true %>
          <% end %>
          <p class="text-left">
          <% if event.user_id == current_user.id %>
          <span class="links"><%= link_to 'Edit', edit_event_path(event), 'data-no-turbolink' => true %> | 
          <span class="links"><%= link_to 'Delete', event, method: :delete,'data-no-turbolink' => true, data: { confirm: 'Are you sure you want to delete this event' } %></span>  
          <% end %>
          </p>
      </div>
          <% end %>
    </div>
</div>

<script type="text/javascript">
  var city = "<%=@city.name%>";
  renderMap(city, "city-map");
  
  var cityEvents = <%= raw @e_markers %>;
  citiesLntLng(cityEvents);
 </script>

