<div id="sites-index-page-wrapper">
  <section id="hero-section">
    <div id="bgndVideo" class="player" 
    	data-property="{videoURL:'http://youtu.be/uw08j-yOfcE',containment:'self',autoPlay:true, mute:true, startAt:5, opacity:1, addRaster:true, stopAt:75.5, showControls:false, stopMovieOnBlur:false}">
    </div>
    <div class="navbarsplash">
    	<div class="navbarsplash-inner">
    		<div class="navlogo"><%=image_tag('logo.png')%></div>
    			<div class="navbarsplash-login">
            <%if current_user %>
              <a><%= link_to "Cities", cities_path, method: :get, :class => "btn-signup"%></a> 
              <a><%=link_to "Activities", user_path(current_user), method: :get, :class => "btn-signup"%></a>
              <a><%=link_to "Log out", sessions_path, method: :delete, :class => "btn-login"%></a>
            <% else %>
    				<a href="#signupModal" data-toggle="modal" data-toggle-flip data-toggle-flip-target="#registerFlip" data-track-event="SignUpModal,TopbarBtn" class="btn-signup" id="registerBtn">Sign up</a>
    				<a href="#loginModal" data-toggle="modal" data-toggle-flip data-toggle-flip-target="#loginFlip" data-directive="login" data-track-event="LogInModal,TopbarBtn" class="btn-login" id="loginBtn"><i class="icon-user"></i> Log in</a>
    			</div>
          <% end %>
    	</div>
    </div>
    <section id="home" class="video">
    	<div class="main-splash row">
    		<div class="inner">
    		<h1> GameOn </h1>
    		<h2>Think Tinder, for sports. Join. Connect. Play.</h2>
            <%if current_user%>
              <a><%= link_to "Jump In!", cities_path, method: :get, :class => "btn-primary"%></a>
            <% else %>
          <a href="#signupModal" data-toggle="modal" data-toggle-flip data-toggle-flip-target="#registerFlip" data-track-event="SignUpModal,TopbarBtn" class="btn-primary" id="registerBtn">Start Now!</a>
          <% end %>
          <p>It's free ;)</p>
    		</div>
    	</div>
    </section>
  </section>
  <div class="row" style="height: 1000px">
    TEST
  </div>
  <!-- Modal -->
  <%= render "partials/modal" %>
</div>