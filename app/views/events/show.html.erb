
<div class="eventshow-map-container">

</div>

<div>
	<h1 class="overflow h3 space-1 text-center"><%=@event.sport.name%>: <%=@event.name %></h1>
	<h5 class="space-2 text-muted text-center"><%= @event.address %> (<%= @event.city %>)</h5>
</div>

<div id="event-stats">
	<h4>Host: <%= link_to (@creator.first_name+" "+@creator.last_name), user_path(@event.user_id)%></h4>

	<h4>Date: <%= @event.date.strftime("%b %d, %Y")%></small></h4>
	<h4>Time: <%= @event.time.strftime("%I:%M%p") %></small></h4>


	<h4>Current Players: <%=@event.users.count + @event.current_headcount%> Players Currently</h4>

	<h4>Needed <%=@event.max_headcount - @event.current_headcount%> Players </h4>
	<h4>Status:  
		<%if (@event.users.count + @event.current_headcount) == @event.max_headcount%>
	    	FULL 
		<%else %> 
	   		OPEN
		<%end%>
	</h4>
</div>


<div id="event-description">
	<h4 class="row-space-4 text-center"> About this activity </h2>
	<p><%=@event.description%></p>
</div>


<h6> Participants: </h6>
<div>
  <% @event.users.each do |attendee| %>
  	<div class='list-group'>
  	 <p> <%= link_to attendee.first_name + " " + attendee.last_name, user_path(attendee.id) %> </p>
</div>
<% end %>

<% if (current_user.id != @creator.id) && (@event.users.count + @event.current_headcount) < @event.max_headcount && !@available.exists?(current_user.id)%>
<%= button_to "Join", attendings_path(@event) %>
<% end %>

<p class="text-right">
	<% if @event.user_id == current_user.id %>
	  <span class="links"><%= link_to 'Edit', edit_event_path(@event) %> | 
	  <span class="links"><%= link_to 'Delete', @event, method: :delete, data: { confirm: 'Are you sure you want to delete this event' } %></span> | 
	<% end %>
	   <span class="links"><%= link_to 'Back', city_path(@event.city_id) %></span>
</p>
	 