<div class="container">
	Welcome, <%= @user.first_name %> <%= @user.last_name%><br>

	Age: <%= @user.age%><br>
	Gender: <%= @user.gender%><br>

</div>
<div>
	<h1> My Created Activities </h1>
<%if @is_creator%>
  
  <% @is_creator.each do |event| %>
  	<div class='list-group'>
  	 <p> <%= link_to event.name, e_path(event)%> Filled: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%></p> <br>
	<% end %>	

<% end %>

</div>
</div>
<div>
	<h1> My Joined Activities </h1>
  
  <% @attending.each do |event| %>
  	<div class='list-group'>
  	 <p> <%= link_to event.name, e_path(event)%> Filled: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%></p> <br>
	<% end %>	

</div>
</div>