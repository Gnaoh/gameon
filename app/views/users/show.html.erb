
<%if current_user == @user%>
    <div class="container">
          <%= image_tag @user.avatar.url(:thumb) %><br>
    	Welcome, <%= @user.first_name %> <%= @user.last_name%><br>
        Age: <%= @user.age%><br>
  Gender: <%= @user.gender%><br>
    	
    <%if @is_creator && !@is_creator.empty?%>
      <h1> My Created Activities </h1>
      
      <% @is_creator.each do |event| %>
      	<div class='list-group'>
             <p> 
               <%= event.date.strftime("%b %d,")%> Status: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%> <h4> <%= link_to event.name, event_path(event)%></h4> <%=event.sport.name%> 
               (<%= event.address%>)
               <%if (event.users.count + event.current_headcount) == event.max_headcount%>
                  <h4> FULL </h4>
               <%else %>
               <h4> OPEN </h4>
               <%end%>
         
             </p><br>
    	<% end %>	

    <% end %>

    </div>
    </div>
    <div>
    	
      <%if !@events.empty?%>
      <h1> My Joined Activities </h1>
      <% @events.each do |event| %>
      	<div class='list-group'>
             <p> 
               <%= event.date.strftime("%b %d,")%> Status: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%> <h4> <%= link_to event.name, event_path(event)%></h4> <%=event.sport.name%> 
               (<%= event.address%>)
               <%if (event.users.count + event.current_headcount) == event.max_headcount%>
                  <h4> FULL </h4>
               <%else %>
               <h4> OPEN </h4>
               <%end%>
         
             </p><br>
      <% end %>	
      <% end %>

    </div>
    </div>

<%else%>
  <%= @user.first_name %> <%= @user.last_name%>
  Age: <%= @user.age%><br>
  Gender: <%= @user.gender%><br>
  <%= image_tag @user.avatar.url(:thumb) %>
  <h1> <%=@user.first_name%>'s Activities </h1>
  <% @events.each do |event| %>
    <div class='list-group'>
         <p> 
           <%= event.date.strftime("%b %d,")%> Status: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%> <h4> <%= link_to event.name, event_path(event)%></h4> <%=event.sport.name%> 
           (<%= event.address%>)
           <%if (event.users.count + event.current_headcount) == event.max_headcount%>
              <h4> FULL </h4>
           <%else %>
           <h4> OPEN </h4>
           <%end%>
     
         </p><br>
  <% end %> 
    <% @is_creator.each do |event| %>
      <div class='list-group'>
           <p> 
             <%= event.date.strftime("%b %d,")%> Status: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%> <h4> <%= link_to event.name, event_path(event)%></h4> <%=event.sport.name%> 
             (<%= event.address%>)
             <%if (event.users.count + event.current_headcount) == event.max_headcount%>
                <h4> FULL </h4>
             <%else %>
             <h4> OPEN </h4>
             <%end%>
       
           </p><br>
    <% end %> 
<%end%>

