<div class="container">
	Welcome, <%= @user.first_name %> <%= @user.last_name%><br>

	Age: <%= @user.age%><br>
	Gender: <%= @user.gender%><br>

</div>
<div>
	<h1> My Created Activities </h1>
<%if @is_creator%>
  
  <% @is_creator.each do |event| %>
  	<div class='list-group'>
  	      <p> 
           <%= event.date.strftime("%b %d,")%> Status: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%> <h4> <%= link_to event.name, event_path(event)%></h4> <%=event.sport.name%> 
           (<%= event.address%>)
           <%if (event.users.count + event.current_headcount) == event.max_headcount%>
              <h4> FULL </h4>
           <%else %>
           <h4> OPEN </h4>
           <%end%>
      
         </p><br>
	<% end %>	

<% end %>

</div>
</div>
<div>
	<h1> My Joined Activities </h1>
  
  <% @events.each do |event| %>
  	<div class='list-group'>
  	       <p> 
             <%= event.date.strftime("%b %d,")%> Status: <%= event.users.count + event.current_headcount%>/<%= event.max_headcount%> <h4> <%= link_to event.name, event_path(event)%></h4> <%=event.sport.name%> 
             (<%= event.address%>)
             <%if (event.users.count + event.current_headcount) == event.max_headcount%>
                <h4> FULL </h4>
             <%else %>
             <h4> OPEN </h4>
             <%end%>
        
           </p><br>
  <% end %>	

</div>
</div>